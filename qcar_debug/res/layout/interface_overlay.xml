<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="15dip" >
    
   	<Button android:id="@+id/next_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/customarrowr"
    />

    <Button
        android:id="@+id/back_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/customarrowl"
     />

    <Button
        android:id="@+id/flash_on_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/next_button"
        android:background="@drawable/customflashon"/>
        

    <Button
        android:id="@+id/flash_off_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/next_button"
        android:background="@drawable/customflashoff"
        android:visibility="gone"/>    
</RelativeLayout>
